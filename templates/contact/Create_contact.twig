{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<body class="bg-gradient-primary">
<div class="container">
<div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 mb-4" style="color:#fff;">Add / Edit Contact</h1>
                            </div>
                                <div class="form-group">
                                <div class="col-lg-12 mb-3 mb-sm-0">
                                   <input type="text" {% if contacts.getContactName()!='' %}value="{{contacts.getContactName()}}" {% else %} value="" {% endif %} name="contactname" id="contactname" class="form-control" 
placeholder="enter name" required autofocus>
                                   </div>
                                    <div class="col-lg-12 mb-3 mb-sm-0" style="margin-top:20px;">
                                        <input type="text" {% if contacts.getAge()!='' %}value="{{contacts.getAge()}}" {% else %} value="" {% endif %} name="age" id="age" class="form-control" 
placeholder="enter age" required autofocus>
                                    </div>
                                    <div class="col-lg-12 mb-3 mb-sm-0" style="margin-top:20px;">
                                        <input type="text" {% if contacts.getMobileNumber()!='' %}value="{{contacts.getMobileNumber()}}" {% else %} value="" {% endif %} name="mobile" id="mobile" class="form-control" 
placeholder="enter mobile number" required autofocus>
                                    </div>
                                </div>
                            <input type="hidden" {% if contacts.getId()!='' %} value="{{contacts.getId()}}" {% else %} value="" {% endif %} id="editId">
                          <button type="button" class="btn btn-success" id="save" style="margin:20px;">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div> 
<script>
$("#save").click(function(){
  var contact_name = $("#contactname").val();
  var age = $("#age").val();
  var mobile = $("#mobile").val();
  var editId = $("#editId").val();
  
  $.ajax({  
         type:"POST",  
         url:"save_contact",  
         data:{"name":contact_name,"age":age,"mobile":mobile,"editId":editId},
         success:function(data){  
             location.reload(true);
         }  
      });
});
</script>
</body>

{% endblock %}