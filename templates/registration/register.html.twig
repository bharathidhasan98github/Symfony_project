{% extends 'base.html.twig' %}
   
{% block title %}Register{% endblock %}

{% block body %}
<body class="bg-gradient-primary">
<div class="container">
<div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 mb-4" style="color:#fff;">Create Registration</h1>
                            </div>
                             {{ form_start(registrationForm) }}
                                <div class="form-group">
                                <div class="col-lg-12 mb-3 mb-sm-0">
                                   {{ form_row(registrationForm.email) }}
                                   </div>
                                    <div class="col-lg-12 mb-3 mb-sm-0" style="margin-top:20px;">
                                        {{ form_row(registrationForm.plainPassword) }}
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success" style="margin:20px;">Register</button>
                             {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div> 
</body>
{% endblock %}